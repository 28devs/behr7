.btn
  padding: 10px 22px
  background: $primary
  border: 2px #fff solid
  text: 18px 1.3 #fff 500 center @md 16px
  font-family: $font
  cursor: pointer
  outline: 0
  border-radius: 28px
  transition: $transition
  display: inline-block
  box-shadow: 0 0 0 2px $primary, 0 4px 16px 0 rgba(0, 0, 0, 0.28)

  &:hover
    border-color: $primary